@model Orders 
@{
    ViewData["Title"] = "AddOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div id=order-data class="card mx-auto" style="max-width: 600px; padding: 20px; background-color: #f8f9fa; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); border-radius: 10px;">
    <div class="card-body">
        <h5 class="card-title text-center">Add Order</h5>
        <form asp-action="AddOrder" asp-controller="Order" method="post">
            <div class="mb-3">
                <input type="hidden" class="form-control" id="order-id" asp-for="Id" />
            </div>
            <div class="form-group">
                <label for="Orderdate">Order Date</label>
                <input type="text" class="form-control form-control-sm" asp-for="OrderDate" id="order-date">
            </div>
            <div class="form-group mt-3">
                <label for="Quantity">Quantity</label>
                <input type="text" class="form-control form-control-sm" asp-for="Quantity" id="quantity">
            </div>
            <div class="form-group mt-3">
                <label for="TotalPrice">Total Price</label>
                <input type="text" class="form-control form-control-sm" asp-for="TotalPrice" id="total-price">
            </div>
            <div class="form-group mt-3">
                <label for="CustomerId">Customer Id</label>
                <input type="text" class="form-control form-control-sm" asp-for="CustomerId" id="customerid">
            </div>
            <button type="submit" class="btn btn-primary mt-4" id="add-btn" style="width: 100%; height: 45px; font-size: 16px;">Add</button>
        </form>
    </div>
</div>



@section scripts {
    <script src="~/js/order.js"></script>
}