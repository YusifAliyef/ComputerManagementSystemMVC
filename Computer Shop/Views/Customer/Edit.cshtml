@model Customers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id=customerdata class="card mx-auto" style="max-width: 600px; padding: 20px; background-color: #f8f9fa; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); border-radius: 10px;">
    <div class="card-body">
        <h5 class="card-title text-center">Edit Customer</h5>
        <form asp-action="Edit" asp-controller="Customer" method="post">
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control form-control-sm" asp-for="FirstName" id="first-name">
            </div>
            <div class="form-group mt-3">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control form-control-sm" asp-for="LastName" id="last-name">
            </div>
            <div class="form-group mt-3">
                <label for="Email">Email</label>
                <input type="email" class="form-control form-control-sm" asp-for="Email" id="email">
            </div>
            <div class="form-group mt-3">
                <label for="Phone">Phone</label>
                <input type="text" class="form-control form-control-sm" asp-for="PhoneNumber" id="phone">
            </div>
            <div class="form-group mt-3">
                <label for="Address">Address</label>
                <input type="text" class="form-control form-control-sm" asp-for="Address" id="address">
            </div>
            <button type="submit" class="btn btn-primary mt-4" id="edit-btn" style="width: 100%; height: 45px; font-size: 16px;">Edit</button>
        </form>
    </div>
</div>
@section scripts {
    <script src="~/js/customer.js"></script>
}
