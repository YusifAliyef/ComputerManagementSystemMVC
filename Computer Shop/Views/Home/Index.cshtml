@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PC Master - Home</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f2f5;
        }

        /* Header */
        header {
            background-color: white
            padding: 20px;
            text-align: center;
            color: white;
        }

            header h1 {
                margin: 0;
                font-size: 2.5rem;
            }

        /* Hero Section */
        .hero {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 80px 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 80vh; /* Hero bölümünün ekran yüksekliğinin çoğunu kaplaması için */
        }

            .hero h2 {
                font-size: 3rem;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 1.25rem;
                max-width: 600px;
                line-height: 1.5;
            }

            .hero button {
                background-color: white;
                color: #007bff;
                border: none;
                padding: 15px 30px;
                font-size: 1.25rem;
                cursor: pointer;
                border-radius: 5px;
                margin-top: 20px;
            }

                .hero button:hover {
                    background-color: #e6e6e6;
                }

        /* Footer */
        footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 20px;
        }

            footer p {
                margin: 0;
            }
    </style>
</head>
<body>

    <!-- Header -->
  

    <!-- Hero Section -->
    <section class="hero">
        <h1>PC Master</h1>
        <h2>
            
            Your Ultimate Gaming PC Store</h2>
        <p>Find the best gaming computers, laptops, and accessories at unbeatable prices. Start your ultimate gaming journey with PC Master today!</p>
      
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 PC Master. #By Yusif Aliyev.</p>
    </footer>

</body>
</html>
