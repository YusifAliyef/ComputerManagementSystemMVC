@model List<Computers>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table" style="width: 100%; border-collapse: collapse;">
    <thead>
        <tr style="background-color: #007BFF; color: #ffffff;">
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid #0056b3;">ID</th>
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid #0056b3;">Computer Name</th>
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid #0056b3;">Brand</th>
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid #0056b3;">InStock</th>
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid #0056b3;">Storage Type</th>
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid #0056b3;">Price</th>
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid #0056b3;">Processor</th>
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid #0056b3;">Category Id</th>
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid #0056b3;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var computers in Model)
        {
            <tr style="background-color: #f2f2f2;">
                <td style="padding: 8px; border-bottom: 1px solid #ddd;">@computers.Id</td>
                <td style="padding: 8px; border-bottom: 1px solid #ddd;">@computers.Name</td>
                <td style="padding: 8px; border-bottom: 1px solid #ddd;">@computers.Brand</td>
                <td style="padding: 8px; border-bottom: 1px solid #ddd;">@computers.InStock</td>
                <td style="padding: 8px; border-bottom: 1px solid #ddd;">@computers.Storagetype</td>
                <td style="padding: 8px; border-bottom: 1px solid #ddd;">@computers.Price</td>
                <td style="padding: 8px; border-bottom: 1px solid #ddd;">@computers.Processor</td>
                <td style="padding: 8px; border-bottom: 1px solid #ddd;">@computers.CategoryId</td>
                
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Computer" asp-action="Edit"
                       asp-route-id="@computers.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Computer" asp-action="Delete"
                       asp-route-id="@computers.Id">Delete</a>
                    <a class="btn btn-secondary btn-sm" asp-controller="Computer" asp-action="Details"
                       asp-route-id="@computers.Id">Detail</a>
                </td>
            </tr>
        }

    </tbody>
</table>


@section scripts {
    <script src="~/js/computerTable.js"></script>
}