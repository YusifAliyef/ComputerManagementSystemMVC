@model Computers

@{
    ViewData["Title"] = "AddComputer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
   
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Computer</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div id="comp-data" class="card mx-auto" style="max-width: 900px; padding: 20px; background-color: #f8f9fa; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); border-radius: 10px;">
            <div class="card-body">
                <h5 class="card-title text-center">Add Computer</h5>
                <form asp-action="AddComputer" asp-controller="Computer" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Name">Computer Name</label>
                            <input type="text" class="form-control form-control-sm" asp-for="Name" id="name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Brand">Brand</label>
                            <input type="text" class="form-control form-control-sm" asp-for="Brand" id="brand">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="InStock">In Stock</label>
                            <input type="text" class="form-control form-control-sm" asp-for="InStock" id="instock">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Price">Price</label>
                            <input type="text" class="form-control form-control-sm" asp-for="Price" id="price">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="StorageType">Storage Type</label>
                            <input type="text" class="form-control form-control-sm" asp-for="Storagetype" id="storageType">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Processor">Processor</label>
                            <input type="text" class="form-control form-control-sm" asp-for="Processor" id="processor">
                        </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="CategoryId">Category Id</label>
                            <input type="text" class="form-control form-control-sm" asp-for="CategoryId" id="categoryId">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Ram">RAM</label>
                            <input type="text" class="form-control form-control-sm" asp-for="Sizes.Ram" id="ram">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Storage">Storage</label>
                            <input type="text" class="form-control form-control-sm" asp-for="Sizes.Storage" id="storage">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ScreenSize">Screen Size</label>
                            <input type="text" class="form-control form-control-sm" asp-for="Sizes.ScreenSize" id="screensize">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mt-4" id="add-btn" style="width: 100%; height: 45px; font-size: 16px;">Add</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>


@section scripts {
    <script src="~/js/computer.js"></script>
}