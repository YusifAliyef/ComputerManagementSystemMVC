@model DetailModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Card without Top Space</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            background-color: #f8f9fa;
            margin: 0;
            padding: 20px;
        }

        .card {
            width: 18rem;
            margin: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background-color: white;
            padding: 0; /* Kart içindeki boşluğu sıfırladık */
        }

            .card:hover {
                transform: scale(1.1);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }


        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.25rem;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 0.9rem;
            margin-bottom: 15px;
        }

        .data-list {
            list-style-type: none;
            padding: 0;
            margin: 0 0 15px 0;
        }

            .data-list li {
                margin-bottom: 5px;
                font-size: 0.9rem;
            }

        .btn {
            display: inline-block;
            padding: 10px 15px;
            font-size: 0.9rem;
            color: white;
            background-color: #007bff;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>

   
    <div class="card">
       
        <div class="card-body">
            <h5 class="card-title"> PC Master</h5>
            <ul class="data-list">
                <li>RAM: @Model.Ram</li>
                <li>Storage: @Model.Storage</li>
              
                <li>Display:@Model.ScreenSize</li>
            </ul>
            <a class="btn btn-info btn-sm" asp-controller="Order" asp-action="AddOrder"
               asp-route-id="@Model.Id">Buy Now</a>
        </div>
    </div>

</body>
</html>

